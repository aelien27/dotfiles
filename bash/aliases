# ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# rvm aliases
alias rgs='rvm gemset'
#alias rgsl='gs list'
#alias rgsu='gs use'

# git aliases
alias g='git status'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gca='git commit -v -a'
# Commit pending changes and quote all args as message
function gg() {
	git commit -v -a -m "$*"
}
alias gco='git checkout'
alias gd='git diff'
alias gl='git log --pretty=oneline'

# the linux equivalent of mac's "pbpaste" (useful for ypaste script)
alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'

# easily clean all vim files from a directory structure
function rmvim() {
	for pat in {'*~','*.swp','*.swo'}
	do
		find . -name "${pat}" -exec rm {} \;
	done
}

# commonly-used directories
alias cdp="cd $HOME/proj"
alias cddf="cd $HOME/bin/dotfiles"

# other command aliases
alias h="history"

# manage bash config
alias vibash="vim -o $HOME/bin/dotfiles/bash/*[!~]"

# manage git config
alias vigit="vim $HOME/.gitconfig"

# manage vim config
alias vivim="vim -o $HOME/.vimrc $HOME/.gvimrc"

# open graphical vim to current folder
alias gv="vim -g . -c 'cd `pwd`'"

# shortcut for ack-grep
alias ack=ack-grep
